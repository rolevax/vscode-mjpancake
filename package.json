{
	"name": "mjpancake",
	"displayName": "Pancake Mahjong",
	"description": "Pancake Mahjong support for VS Code",
	"version": "0.3.1",
	"publisher": "rolevax",
	"repository": {
		"type": "git",
		"url": "https://github.com/rolevax/vscode-mjpancake.git"
	},
	"icon": "images/icon.png",
	"keywords": [
		"mjpancake",
		"libsaki"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mjpancake.newGirl",
		"onLanguage:json",
		"workspaceContains:*.girl.json"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mjpancake.newGirl",
				"title": "New Girl",
				"category": "Pancake Mahjong"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Pancake Mahjong",
			"properties": {
				"mjpancake.appPath": {
					"type": "string",
					"default": "",
					"markdownDescription": "Absolute path to `mjpancake.exe` (or `mjpancake` on a Unix-like)"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.13",
		"eslint": "^5.13.0",
		"typescript": "^3.5.3",
		"vscode": "^1.1.35"
	}
}
